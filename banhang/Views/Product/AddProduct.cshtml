@model banhang.Models.Product

<div class="page-wrapper">
    <div class="container-fluid" style="padding-top: 70px;">
        <div class="row mb-2">
            <i class="mdi mdi-arrow-left">
                <a asp-action="Index" asp-controller="Product">Quay lại danh sách sản phẩm</a>
            </i>
        </div>
        <div class="row mb-4">
            <div class="col-md-6">
                <h3 class="page-title">Thêm sản phẩm</h3>
            </div>
        </div>

        <form asp-action="AddProduct" method="post" enctype="multipart/form-data">
            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Hình thức quản lý</h4>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="CategoryId" class="col-md-3 col-form-label">Loại sản phẩm</label>
                        <div class="col-md-9">
                            <select asp-for="CategoryId" class="form-control" asp-items="@(ViewData["CategoryList"] as SelectList)" data-live-search="true">
                                <option value="">--Chọn loại sản phẩm--</option>
                            </select>
                        </div>
                    </div>

                </div>
            </div>                              

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Thông tin chung</h4>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="ProductName" class="col-md-3 col-form-label">Tên sản phẩm</label>
                        <div class="col-md-9">
                            <input asp-for="ProductName" class="form-control" placeholder="Nhập tên sản phẩm" />
                            <span asp-validation-for="ProductName" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ProductDescription" class="col-md-3 col-form-label">Mô tả sản phẩm</label>
                        <div class="col-md-9">
                            <textarea asp-for="ProductDescription" class="form-control" rows="4" placeholder="Nhập mô tả sản phẩm"></textarea>
                            <span asp-validation-for="ProductDescription" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group row">
                        <label asp-for="ImageUrl" class="col-md-3 col-form-label">Ảnh sản phẩm</label>
                        <div class="col-md-9">
                            <input asp-for="ImageUrl" type="text" class="form-control" placeholder="Nhập đường dẫn ảnh sản phẩm" />                            
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Giá sản phẩm</h4>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Price" class="col-md-3 col-form-label">Giá bán</label>
                        <div class="col-md-9">
                            <input asp-for="Price" class="form-control" placeholder="Nhập giá bán" type="number" step="0.01" />
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-4">
                <div class="card-header">
                    <h4 class="mb-0">Kho hàng</h4>
                </div>
                <div class="card-body">
                    <div class="form-group row">
                        <label asp-for="Stock" class="col-md-3 col-form-label">Tồn kho ban đầu</label>
                        <div class="col-md-9">
                            <input asp-for="Stock" class="form-control" placeholder="Nhập tồn kho ban đầu" type="number" />
                            <span asp-validation-for="Stock" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="text-right d-flex justify-content-end gap-3">
                <button type="submit" class="btn btn-success btn-lg px-4 rounded-pill shadow">
                    <i class="fas fa-save"></i> Lưu
                </button>

                <a asp-action="Index" class="btn btn-outline-danger btn-lg px-4 rounded-pill shadow">
                    <i class="fas fa-times"></i> Hủy
                </a>
            </div>
        </form>
    </div>
</div>



