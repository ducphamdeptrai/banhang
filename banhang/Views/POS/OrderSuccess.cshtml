@model Order
@{
    ViewData["Title"] = "Đơn hàng thành công";
    Layout = null;
}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<div class="page-wrapper">
   <div class="container-fluid" style="padding-top: 100px;">
    <div class="container mt-4">

        <h2>Đơn hàng #@Model.OrderId đã hoàn tất!</h2>
        <p>Khách hàng: @Model.Customer.CustomerName</p>
        <p>Ngày đặt: @Model.OrderDate</p>
        <p>Tổng tiền: @Model.TotalAmount VND</p>

        <h3>Chi tiết đơn hàng:</h3>
        <table class="table">
            <thead>
                <tr>
                    <th>Sản phẩm</th>
                    <th>Giá</th>
                    <th>Số lượng</th>
                    <th>Tổng</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Order_Details)
                {
                        <tr>
                            <td>@item.Product.ProductName</td>
                            <td>@item.UnitPrice VND</td>
                            <td>@item.Quantity</td>
                                <td>@item.TotalPrice </td>
                        </tr>
                }
            </tbody>
        </table>

         <div class="text-center mt-3">
        <button onclick="window.print()" class="btn btn-success">In Hóa Đơn</button>
        <a href="@Url.Action("Index", "POS")" class="btn btn-primary">Quay lại POS</a>
        </div>
        </div>
     </div>
</div>
<script>
    window.onload = function () {
        setTimeout(() => {
    window.print();
}, 1000);

    };
</script>