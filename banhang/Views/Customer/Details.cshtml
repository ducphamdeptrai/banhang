@model banhang.Models.Customer

@{
    ViewData["Title"] = "Chi tiết khách hàng";
}
<div class="page-wrapper">
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg rounded-3">
                    <div class="card-header bg-primary text-white text-center">
                        <h2 class="mb-0">Chi Tiết Khách Hàng</h2>
                    </div>
                    <div class="card-body">
                        <table class="table table-striped table-hover align-middle">
                            <thead class="table-dark">
                                <tr>
                                    <th class="text-center">Thông Tin</th>
                                    <th class="text-center">Chi Tiết</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><strong>Tên</strong></td>
                                    <td>@Model.CustomerName</td>
                                </tr>
                                <tr>
                                    <td><strong>Email</strong></td>
                                    <td>@Model.CustomerEmail</td>
                                </tr>
                                <tr>
                                    <td><strong>Số điện thoại</strong></td>
                                    <td>@Model.CustomerPhone</td>
                                </tr>
                                <tr>
                                    <td><strong>Địa chỉ</strong></td>
                                    <td>@Model.CustomerAddress</td>
                                </tr>
                                <tr>
                                    <td><strong>Ngày tạo</strong></td>
                                    <td>@(Model.CreatedAtCustomer != null ? Model.CreatedAtCustomer.ToString("dd/MM/yyyy") : "N/A")</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left-circle"></i> Quay lại
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
